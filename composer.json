{
  "name": "sima-land/yii2-amqp",
  "description": "Yii2 AMQP extension (wrapper on php-amqplib).",
  "type": "yii2-extension",
  "keywords": ["yii2","extension","rabbitmq","amqp","message queue"],
  "license": "MIT",
  "authors": [
    {
      "name": "Danil Syromolotov",
      "email": "pelmennoteam@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.1",
    "ext-json": "*",
    "cebe/assetfree-yii2": "^2.0",
    "php-amqplib/php-amqplib": "^2.8"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "phpunit/phpunit": "^7.4",
    "php-coveralls/php-coveralls": "^1.0"
  },
  "suggest": {
    "ext-pcntl": "Use pcntl extension",
    "ext-posix": "Use posix extension"
  },
  "autoload": {
    "psr-4": {
      "simaland\\amqp\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "simaland\\amqp\\tests\\": "./tests"
    }
  },
  "extra": {
    "bootstrap": "simaland\\amqp\\Component"
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "docker-start": "docker-compose up -d",
    "docker-stop": "docker-compose stop",
    "docker-restart": "docker-compose stop && docker-compose up -d"
  },
  "scripts-descriptions": {
    "test": "Run tests for this package"
  }
}
